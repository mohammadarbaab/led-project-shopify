<header>
  <h1 class="header-nav">
    <div>
      <a href="/">
        <img
          width="80"
          height="50"
          loading="lazy"
          src="{{'nikeLogo.png' | asset_url}}"
        >
      </a>
    </div>

    <div>
      <ul class="middle-nav-bar">
        {% for link in linklists['main-menu'].links %}
          <li>{{ link.title | link_to: link.url }}</li>
        {% endfor %}
      </ul>
    </div>

    <div class="right-nav-items">
      <form action="/search">
        <input class="search-nav" placeholder="search" type="search">
      </form>
      <img
        width="25"
        height="30"
        loading="lazy"
        src="{{'add-to-cart.png' | asset_url}}"
      >
    </div>
  </h1>
</header>

<style>
  .header-nav {
    display: flex;
    justify-content: space-between;
    margin: 0;
    padding: 0 30px 0 30px;
    align-items: center;
  }

  .middle-nav-bar {
    display: flex;
    font-size: 17px;
    font-weight: bold;
  }
  .middle-nav-bar li {
    padding: 10px;
    list-style-type: none;
  }
  .middle-nav-bar li:hover {
    text-decoration: underline;
  }

  .middle-nav-bar a {
    color: inherit;
    text-decoration: none;
  }

  .right-nav-items {
    display: flex;
    gap: 5px;
  }
  .right-nav-items img {
    margin-top: 12px;
  }
  .search-nav {
    padding: 10px;
    margin-top: 10px;
    border-radius: 10px;
    border: none;
    background-color: rgb(219, 212, 212);
  }

  .header-nav{
    background:{{section.settings.background  }};
    color:{{  section.settings.text_color}};
  }
</style>
