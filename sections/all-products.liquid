<section class="all-products">
  <h1>{{ collections['nike-air-max'].title }}</h1>
  <div class="product-container">
    <div class="all-products-wrapper">
      {% for product in collections['nike-air-max'].products %}
        <h3>{{ product.title | link_to: product.url }}</h3>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "all-prooducts",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#F4F4F4"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "all-products"
    }
  ]
}
{% endschema %}
